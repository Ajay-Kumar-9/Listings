<%- layout('./layouts/boilerplate.ejs') %>

<div class="container mt-3">
  <h3>Search Results for: "<%= query %>"</h3>

  <% if (listings.length === 0) { %>
    <p>No listings found matching your search query.</p>
  <% } else { %>
    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-3">
      <% for(let listing of listings) { 
          let gstPrice = Math.round(listing.price * 1.18);
      %>
        <a href="/listings/<%= listing._id %>" class="listing-link">
          <div class="card col listing-card">
            <img src="<%= listing.image.url %>" class="card-img-top" alt="listing_img" style="height: 20rem;" />
            <div class="card-body">
              <p class="card-text">
                <b><%= listing.title %></b><br>
                <span class="price-original">&#8377; <%= listing.price.toLocaleString("en-IN") %> /night</span>
                <span class="price-with-tax" style="display: none;">&#8377; <%= gstPrice.toLocaleString("en-IN") %> /night (incl. 18% GST)</span>
              </p>
            </div>
          </div>
        </a>
      <% } %>
    </div>
  <% } %>
</div>
