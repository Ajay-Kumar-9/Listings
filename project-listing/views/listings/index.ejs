<% layout("./layouts/boilerplate.ejs") %>

<style>
  .filter {
    justify-content: center;
    margin-right: 2rem;
    margin-top: 2rem;
    opacity: 0.7rem;
  }

  #filters {
    display: flex;
    flex-wrap: wrap;
    align-items: center;
  }

  .filter:hover {
    opacity: 1;
    cursor: pointer;
  }

  .filter p {
    font-size: 0.8rem;
  }

  .tax-info {
    display: none;
    color: green;
    font-size: 0.75rem;
  }

  .toggle-wrapper {
    display: flex;
    justify-content: flex-end;
    width: 100%;
    margin: 1rem 0;
  }

  .tax-toggle {
    background-color: #ffffff;
    border: 2px solid #000000;
    border-radius: 10px;
    padding: 0.5rem 1rem;
    display: inline-flex;
    align-items: center;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.15);
    font-size: 0.85rem;
  }

  .form-check-input {
    width: 1.5rem;
    height: 1rem;
    margin-right: 0.5rem;
  }

  .form-check-label {
    white-space: nowrap;
  }
</style>

<!-- Toggle Switch aligned to right above listings -->
<div class="container toggle-wrapper">
  <div class="tax-toggle">
    <div class="form-check-reverse form-switch">
      <input class="form-check-input" type="checkbox" id="flexSwitchCheckDefault">
      <label class="form-check-label" for="flexSwitchCheckDefault">Display total after taxes</label>
    </div>
  </div>
</div>

<!-- Listings -->
<div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-3">
  <% for(let listing of allListing){ 
    let gstPrice = Math.round(listing.price * 1.18); 
  %>
    <a href="/listings/<%= listing._id %>" class="listing-link">
      <div class="card col listing-card">
        <img src="<%= listing.image.url %>" class="card-img-top" alt="listing_img" style="height: 20rem;" />
        <div class="card-img-overlay"></div>
        <div class="card-body">
          <p class="card-text">
            <b><%= listing.title %></b><br>
            <span class="price-original">&#8377; <%= listing.price.toLocaleString("en-IN") %> /night</span>
            <span class="price-with-tax" style="display: none;">&#8377; <%= gstPrice.toLocaleString("en-IN") %> /night (incl. 18% GST)</span>
          </p>
        </div>
      </div>
    </a>
  <% } %>
</div>

<script>
  const switchInput = document.getElementById("flexSwitchCheckDefault");

  switchInput.addEventListener("change", () => {
    const originals = document.querySelectorAll(".price-original");
    const withTaxes = document.querySelectorAll(".price-with-tax");

    for (let i = 0; i < originals.length; i++) {
      if (switchInput.checked) {
        originals[i].style.display = "none";
        withTaxes[i].style.display = "inline";
      } else {
        originals[i].style.display = "inline";
        withTaxes[i].style.display = "none";
      }
    }
  });
</script>
