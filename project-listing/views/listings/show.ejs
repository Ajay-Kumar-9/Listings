<% layout("./layouts/boilerplate.ejs") %>

<script>
  const mapToken = "<%= process.env.MAP_TOKEN %>";
  const listing = <%- JSON.stringify(listing)%>;
</script>

<style>
  .listing-card img {
    max-height: 300px;
    object-fit: cover;
  }

  #map {
    height: 300px;
    width: 100%;
    border-radius: 8px;
    margin-bottom: 2rem; /* ‚úÖ padding below map */
  }

  @media (min-width: 992px) {
    /* ‚úÖ Increase map height on large screens (lg and above) */
    #map {
      height: 350px;
    }
  }
</style>

<div class="container mt-3">
  <!-- Title -->
  <div class="row justify-content-center">
    <div class="col-12 col-md-10 col-lg-8 text-center">
      <h3 class="mb-3"><%= listing.title %></h3>
    </div>
  </div>

  <!-- Main Listing Card -->
  <div class="row justify-content-center">
    <div class="card col-12 col-md-10 col-lg-8 mb-4 p-0 show-card listing-card">
      <img
        src="<%= listing.image.url %>"
        class="card-img-top img-fluid"
        alt="Listing_img"
      />
      <div class="card-body">
        <p><strong>Owned by:</strong> <i><%= listing.owner.username %></i></p>
        <p><%= listing.description %></p>
        <p>üí∞ &#8377; <%= listing.price.toLocaleString("en-IN") %> / night</p>
        <p>üìç <%= listing.location %>, <%= listing.country %></p>

        <!-- Buttons -->
        <div class="d-flex flex-wrap gap-2 my-3">
          <a href="/listings/<%= listing._id %>/edit" class="btn btn-dark">Edit</a>
          <form method="POST" action="/listings/<%= listing._id %>?_method=DELETE">
            <button class="btn btn-dark">Delete</button>
          </form>
        </div>

        <!-- Review Form -->
        <% if(currUser){ %>
          <hr />
          <div>
            <h4>Leave a review</h4>
            <form action="/listings/<%= listing._id%>/reviews" method="POST" class="needs-validation" novalidate>
              <label for="rating" class="form-label">Rating :</label>
              <fieldset class="starability-slot">
                <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="0" checked aria-label="No rating." />
                <input type="radio" id="first-rate1" name="review[rating]" value="1" />
                <label for="first-rate1" title="Terrible">1 star</label>
                <input type="radio" id="first-rate2" name="review[rating]" value="2" />
                <label for="first-rate2" title="Not good">2 stars</label>
                <input type="radio" id="first-rate3" name="review[rating]" value="3" />
                <label for="first-rate3" title="Average">3 stars</label>
                <input type="radio" id="first-rate4" name="review[rating]" value="4" />
                <label for="first-rate4" title="Very good">4 stars</label>
                <input type="radio" id="first-rate5" name="review[rating]" value="5" />
                <label for="first-rate5" title="Amazing">5 stars</label>
              </fieldset>

              <div class="mb-3 mt-3">
                <label for="comment" class="form-label">Comment</label>
                <textarea name="review[comment]" cols="40" rows="5" id="comment" class="form-control" required></textarea>
                <div class="invalid-feedback">Please submit some comment for reviews</div>
                <button class="btn btn-outline-dark mt-3">Submit</button>
              </div>
            </form>
          </div>
        <% } %>

        <!-- Reviews -->
        <% if(listing.reviews.length > 0){ %>
          <hr />
          <p><b>All reviews</b></p>
          <div class="row">
            <% for(let review of listing.reviews ){ %>
              <div class="col-12 col-md-6 mb-3">
                <div class="card h-100">
                  <div class="card-body">
                    <h5 class="card-title">@<%= review.author.username %></h5>
                    <p class="starability-result card-text" data-rating=<%= review.rating %>></p>
                    <p class="card-text"><%= review.comment %></p>
                    <form method="POST" action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE">
                      <button class="btn btn-sm btn-dark mt-2">Delete</button>
                    </form>
                  </div>
                </div>
              </div>
            <% } %>
          </div>
        <% } %>
      </div>
    </div>
  </div>

  <!-- Map Section -->
  <div class="row justify-content-center">
    <div class="col-12 col-md-10 col-lg-8">
      <h3>Where you'll be</h3>
      <div id="map"></div>
    </div>
  </div>
</div>

<script src="/js/map.js"></script>
